<UserControl x:Class="kiosk_snapprint.Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kiosk_snapprint"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1900">

    <Grid Background="White" Margin="20">

        <!-- Header -->
        <TextBlock Text="Report a Problem" 
                   FontSize="40" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Margin="754,46,0,0" Width="332"/>

        <!-- Buttons Section -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="1860" Height="797" Margin="-10,243,0,0" >
            <Button Content="Printer Malfunction" 
                    Width="450" Height="115" 
                    Margin="0,20,0,0"
                    FontSize="30"
                    FontWeight="Bold"
                    Click="ReportPrinterMalfunction"
                    Background="White" 
                    Foreground="Black"
                    BorderBrush="Black" 
                    BorderThickness="5">
            </Button>
            <Button Content="Paper Jam" 
                    Width="450" Height="115" 
                    Margin="0,20,0,0"
                    FontSize="30"
                    FontWeight="Bold"
                    Click="ReportPaperJam"
                    Background="White" 
                    Foreground="Black"
                    BorderBrush="Black" 
                    BorderThickness="5">
            </Button>
            <Button Content="Payment Issues" 
                    Width="450" Height="115" 
                    Margin="0,20,0,0"
                    FontSize="30"
                    FontWeight="Bold"
                    Click="ReportPaymentIssues"
                    Background="White" 
                    Foreground="Black"
                    BorderBrush="Black" 
                    BorderThickness="5">
            </Button>
            <Button Content="Paper Out of Stock" 
                    Width="450" Height="115" 
                    Margin="0,20,0,0"
                    FontSize="30"
                    FontWeight="Bold"
                    Click="ReportPaperOutOfStock"
                    Background="White" 
                    Foreground="Black"
                    BorderBrush="Black" 
                    BorderThickness="5">
            </Button>
        </StackPanel>

        <!-- Back Button -->
        <Button Content="Back"  
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
               Width="200" Height="115"
               Margin="20,15,0,0" 
                FontSize="40" 
                FontWeight="Bold" 
                Click="BackButton_Click"
                Background="White" 
                Foreground="Black"
                BorderBrush="Black" 
                BorderThickness="5"/>
    </Grid>
</UserControl>

<UserControl x:Class="kiosk_snapprint.PricingQR"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syncfusion="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kiosk_snapprint"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">


        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>



        <StackPanel 
          VerticalAlignment="Center" 
          HorizontalAlignment="Right" 
          Background="White" 
          Width="310" 
          Height="330" Margin="0,0,45,0">
            <Image Height="250" Width="250" Source="/pdficon.png"/>
            <TextBlock FontSize="15"
                x:Name="filename"
                FontWeight="Bold"
                Height="55"
                Width="240"
                TextTrimming="CharacterEllipsis" />

        </StackPanel>




        <!-- Preferences Panel -->
        <StackPanel Grid.Column="1" 
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Left" 
                 Background="White" 
                 Width="360" 
                 Height="444" Margin="35,0,0,0">
            <!-- Preferences Header -->
            <TextBlock Text="Step 5: Check Order Summary. &#xA; Please, don't insert payment yet." 
                    FontSize="20" 
                    FontWeight="Bold" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,30" />

            <StackPanel Orientation="Horizontal" 
             HorizontalAlignment="Left"
             Margin="0,0,0,20" Width="195">

                <!-- Number of Copies -->
                <TextBlock Text="Color: " 
                    FontSize="20"  
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Stretch"
                    Margin="0,0,0,10" 
                    FontWeight="Bold" />
                <TextBlock x:Name="color_label"
                    FontSize="20" 
                    Margin="0,0,0,10" 
                    FontWeight="Bold" Width="133" Height="30" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                 HorizontalAlignment="Left"
                 Margin="0,0,0,20" Width="310" Height="40">

                <!-- Number of Copies -->
                <TextBlock Text="Selected pages: " 
                    FontSize="20"
                    VerticalAlignment="Stretch"
                    Margin="0,0,0,10" 
                    FontWeight="Bold" Height="28" />
                <TextBlock x:Name="selected_pages_label" 
                    FontSize="20" 
                    Margin="0,0,0,10" 
                    FontWeight="Bold" Width="165" Height="27" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                     HorizontalAlignment="Left"
                     Margin="0,0,0,20" Width="308">

                <!-- Number of Copies -->
                <TextBlock Text="Page Size: " 
                     FontSize="20"  
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Stretch"
                     Margin="0,0,0,10" FontWeight="Bold" />
                <TextBlock x:Name="pagesize_label" 
                    FontSize="20" 
                    Margin="0,0,0,10" 
                    FontWeight="Bold" Width="205" Height="27" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Left"
                Margin="0,0,0,20" Width="310">

                <!-- Number of Copies -->
                <TextBlock Text="Copies: " 
                     FontSize="20"  
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Stretch"
                     Margin="0,0,0,10" 
                     FontWeight="Bold" />
                <TextBlock x:Name="Copies_label" 
                      FontSize="20" 
                      Margin="0,0,0,10" 
                      FontWeight="Bold" Width="237" Height="27" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                     HorizontalAlignment="Left"
                    Margin="0,0,0,20" Width="310">


                <TextBlock Text="To Pay: " 
                     FontSize="30"  
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Stretch"
                     Margin="0,0,0,10" 
                     FontWeight="Bold" />
                <TextBlock x:Name="total_label" 
                    FontSize="30" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Stretch"
                    Margin="0,0,0,10" 
                    FontWeight="Bold" Width="187" Height="41"/>
            </StackPanel>



            <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,0">
                <Button x:Name="BackButton" 
                    Content="Back" 
                    Width="100" 
                    Height="45" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Margin="0,0,10,0" Click="BackButton_Click" 
                    />
                <Button x:Name="NextButton" 
                    Content="Next" 
                    Width="100" 
                    Height="45" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Margin="10,0,0,0" Click="NextButton_Click" 
                    />
            </StackPanel>





        </StackPanel>

    </Grid>
</UserControl>
